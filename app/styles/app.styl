// Link to adding nib for browser compatibility
// https://github.com/stefanpenner/ember-cli/issues/650


@import 'vendor/nib'
@import url(http://fonts.googleapis.com/css?family=Raleway:200,300,400,700);



body
	font-family: 'Raleway', sans-serif;
	padding-top 60px
	background #fff

.navbar-inverse
	.navbar-brand
		font-size 20px
		color #18bc9c
		&:hover
			color #2c3e50

.navbar-inverse .navbar-nav>li>a
	color #18bc9c
	&:hover
		color #2c3e50

.navbar-inverse
	background #fff
	box-shadow 0px 3px 10px #2c3e50

.row
	padding 115px 0px


.section-header
	font-weight 300
	letter-spacing 5px
	margin-bottom 40px

.who
	// background: linear-gradient(bottom, 1% #fff, 99% #18bc9c)
	background #18bc9c
	
	.poloroid
		margin 0 auto
		background #fff
		border 12px solid #fff
		transform rotate(-3deg)
	.jumbo-copy
		color #fff
		h1	 
			text-transform	uppercase
			font-size 50px
			margin 5px 0px 15px
		p 
			font-size 18px
			margin-bottom 30px
		.lead
			font-size 24px
			font-weight bold

		a 
			text-transform	uppercase
			padding 10px 30px
			color #fff
			&:hover
				text-decoration none

.skills
	background #fff
	// background #2c3e50
	.section-header
		border-bottom 1px solid #2c3e50

.recipes
	background #2c3e50
	color #fff

	.section-header
		border-bottom 1px solid #fff

	h4
		letter-spacing 3px
		margin-bottom 30px

	.galler-img-container
		padding 15px

		.gallery-img
			padding 0px	

			&:hover	
				box-shadow 0px 0px 15px #18bc9c
				cursor pointer
			
			.gallery-link
				margin 5px auto 0px

			.gallery-caption
				padding 15px 0px 15px
				background #fff
				color #2c3e50
				h4 
					font-weight bold
					margin 0px 0px 5px
				p
					margin-bottom 0px
					font-style italic

.quote
	background #18bc9c
	color #fff
	.section-header
		border-bottom 1px solid #fff


.connect
	color #2c3e50
	.section-header
		border-bottom 1px solid #2c3e50
	h4
		margin 40px 0px 20px
	i, a
		color #2c3e50
		&:hover
			text-decoration none
			cursor pointer
			color #18bc9c
